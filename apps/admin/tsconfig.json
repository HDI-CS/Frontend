{
  "extends": "@hdi/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/src/*": ["./src/*"],
      "@/public/*": ["./public/*"],
      "@hdi/ui": ["../../packages/ui/src"],
      "@hdi/fonts": ["../../packages/fonts/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
